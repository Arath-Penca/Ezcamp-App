<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/White">

    <LinearLayout
        android:background="@color/White"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/CampName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimaryColor"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:layout_marginBottom="4dp"
            android:text="Camp Name"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/CampImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/no_image_test_ezcamp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/CampWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:textSize="17sp"
            android:text="Weather on Camp Day: 87"
            android:textColor="@color/textPrimaryColor"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/CampAlerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:textSize="17sp"
            android:text="Alerts: none"
            android:layout_marginBottom="20sp"
            android:textColor="@color/textPrimaryColor"
            android:textStyle="bold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ButtonInfo"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/White"
                android:textSize="17sp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="30dp"
                android:paddingRight="30dp"
                android:textStyle="bold"
                android:text="@string/Info"
                android:background="@drawable/border_accent_color" />

            <Button
                android:id="@+id/ButtonEdit"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/White"
                android:textSize="17sp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="30dp"
                android:paddingRight="30dp"
                android:textStyle="bold"
                android:text="@string/Edit"
                android:background="@drawable/border_accent_color"/>



        </LinearLayout>








    </LinearLayout>


</androidx.cardview.widget.CardView>